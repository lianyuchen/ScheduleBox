<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- created by lianyuchen on 2015/01/10 -->
    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="#FF9900" />

            <corners android:radius="5dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="#ffffffff" />

            <padding
                android:bottom="8dp"
                android:left="10dp"
                android:right="10dp"
                android:top="8dp" />

            <corners android:radius="5dp" />
        </shape>
    </item>

</layer-list>